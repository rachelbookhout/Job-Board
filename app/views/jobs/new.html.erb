<%= form_for @job do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_field :description, size: "60x12" %>

    <%= f.label :company %>
    <%= f.collection_select :company_id, @companies, :id, :name %>
    <%= f.submit "Create" %>
<% end %>


